import React from 'react';

const TextBox = ({ label, value, onChange, error }) => {
  return (
    <div>
      <label>{label}:</label>
      <input
        type="text"
        name="name"
        value={value}
        onChange={onChange}
      />
      {error && <span style={{ color: 'red' }}>{error}</span>}
    </div>
  );
};

export default TextBox;
